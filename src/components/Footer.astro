---
import JoiSolutionsIcon from "../icons/JoiSolutionsIcon.astro";
const currentYear = new Date().getFullYear();
---

<footer>
  <div
    class="bg-neutral-50 pt-12 pb-6  px-6 md:px-20 max-w-screen-xl mx-auto flex flex-col items-center justify-center gap-4 border border-neutral-200 rounded-t-2xl shadow-xl"
  >
    <div class="flex flex-col md:flex-row justify-between items-start w-full text-neutral-600">
      <div>
        <JoiSolutionsIcon class="text-4xl" />
      </div>
      <div class="flex flex-col md:flex-row items-start gap-10 md:gap-24 mt-10 md:mt-0">
        <div>
          <h2 class="font-bold mb-2">Menu</h2>
          <ul class="flex flex-col gap-2">
            <li>
              <a href="/nosotros" class="cursor-trigger">Nosotros</a>
            </li>
            <li>
              <a href="/productos" class="cursor-trigger">Productos</a>
            </li>
            <li>
              <a href="/contacto" class="cursor-trigger">Contacto</a>
            </li>
          </ul>
        </div>
        <div>
          <h2 class="font-bold mb-2">Productos</h2>
          <ul class="flex flex-col gap-2">
            <li>
              <a href="/productos/joipay" class="cursor-trigger">JoiPay</a>
            </li>
            <li>
              <!-- <a href="#" class="cursor-trigger">JoiCare</a> -->
              <span class=" text-neutral-400">
                JoiCare (Próximamente)
              </span>
            </li>
            <li>
              <!-- <a href="#" class="cursor-trigger">JoiNow</a> -->
               <span class=" text-neutral-400">
                JoiNow (Próximamente)
               </span>
            </li>
            <li>
              <!-- <a href="#" class="cursor-trigger">JoiNow</a> -->
               <span class=" text-neutral-400">
                JoiSave (Próximamente)
               </span>
            </li>
          </ul>
        </div>
        <div>
          <h2 class="font-bold mb-2">Legal</h2>
          <ul class="flex flex-col gap-2">
            <li>
              <a href="/" class="cursor-trigger">Política de privacidad</a>
            </li>
            <li>
              <a href="/" class="cursor-trigger">Términos y condiciones</a>
            </li>
          </ul>
        </div>
      </div>
    </div>
    <div class="flex flex-col items-center justify-center gap-4 mt-12">
      <p class="text-sm text-neutral-600 text-center">
        © {currentYear} JoiSolutions. Todos los derechos reservados.
      </p>
    </div>
  </div>
</footer>
