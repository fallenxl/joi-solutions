---
//docs
import TerminosYCondiciones from "../assets/docs/terminos-y-condiciones.pdf";
import PoliticaDePrivacidad from "../assets/docs/politicas-de-privacidad.pdf";
import TerminosDeServicio from "../assets/docs/terminos-de-servicio.pdf";
import JoiSolutionsIcon from "../icons/JoiSolutionsIcon.astro";
const currentYear = new Date().getFullYear();
---

<footer>
  <div
    class="bg-neutral-50 pt-12 pb-6 max-w-screen-xl mx-auto flex flex-col items-center justify-center gap-4 border border-neutral-200 rounded-t-2xl shadow-xl w-full"
  >
    <div
      class="flex flex-col md:flex-row justify-between items-start w-full text-neutral-600 px-6 md:px-20"
    >
      <div class="flex flex-col items-start md:items-center gap-4">
        <JoiSolutionsIcon class="text-4xl" showSlogan />
        <div class="flex items-center justify-between w-1/2 gap-4">
          <a href="https://www.facebook.com/share/1C7FGbsHQn/?mibextid=wwXIfr" class="text-2xl font-bold text-neutral-500 cursor-pointer cursor-trigger"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="Facebook"
          >
            <!-- facebook icon -->
            <i class="fab fa-facebook-f text-secondary"></i>
          </a>
          <a
            href="https://www.linkedin.com/company/joisolutions/"
            class="text-2xl font-bold text-neutral-500 cursor-pointer cursor-trigger"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="LinkedIn"
          >
            <!-- linkedin icon -->
            <i class="fab fa-linkedin-in text-secondary"></i>
          </a>
          <a
            href="https://www.instagram.com/joi_solutions/?hl=es-la"
            class="text-2xl font-bold text-neutral-500 cursor-pointer cursor-trigger"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="Instagram"
          >
            <!-- instagram icon -->
            <i class="fab fa-instagram text-secondary"></i>
          </a>
        </div>
      </div>
      <div
        class="flex flex-col md:flex-row items-start gap-10 md:gap-24 mt-10 md:mt-0"
      >
        <div>
          <h2 class="font-bold mb-2">Menu</h2>
          <ul class="flex flex-col gap-2">
            <li>
              <a href="/nosotros" class="cursor-trigger">Nosotros</a>
            </li>
            <li>
              <a href="/productos" class="cursor-trigger">Productos</a>
            </li>
            <li>
              <a href="/contacto" class="cursor-trigger">Contacto</a>
            </li>
          </ul>
          <h2 class="font-bold mt-4 mb-2">Reclamaciones y Denuncias</h2>
          <ul class="flex flex-col gap-2">
                   <li>
              <a
                href="https://forms.office.com/r/JhbPiDAeLM?origin=lprLink"
                class="cursor-trigger"
                target="_blank"
                rel="noopener noreferrer"
              >
                Libro de Reclamaciones
              </a>
            </li>
                    <li>
              <a
                href="https://forms.office.com/r/JhbPiDAeLM?origin=lprLink"
                class="cursor-trigger"
                target="_blank"
                rel="noopener noreferrer"
                title="Requisito del Sistema de Gestión Antisoborno y Anticorrupción"
              >
                Canal de Denuncias
              </a>
            </li>
          </ul>
        </div>
        <div>
          <h2 class="font-bold mb-2">Productos</h2>
          <ul class="flex flex-col gap-2">
            <li>
              <a href="/joi-taq" class="cursor-trigger">Joi Taq</a>
            </li>
          </ul>
        </div>
        <div>
          <h2 class="font-bold mb-2">Contacto</h2>
          <ul class="flex flex-col gap-2">
            <li>
              <a
                href="mailto:info@joisolutions.io"
                class="cursor-trigger underline">info@joisolutions.io</a
              >
            </li>
            <li class="max-w-[30ch]">
              Calle Coronel Andrés Reyes 437, oficina 902, San Isidro.
            </li>
    
          </ul>
        </div>
      </div>
    </div>
    <div
      class="w-full flex flex-col items-start px-6 md:items-center justify-center gap-4 mt-10 border-t border-neutral-200 py-5"
    >
      <div>
        <ul class="flex flex-col md:flex-row  items-start md:items-center gap-2 md:gap-6 mb-4">
          <li>
            <a
              href={TerminosYCondiciones}
              target="_blank"
              rel="noopener noreferrer"
              class="text-sm text-neutral-600 cursor-trigger"
              >Términos y Condiciones</a
            >
          </li>
          <li>
            <a
              href={PoliticaDePrivacidad}
              target="_blank"
              rel="noopener noreferrer"
              class="text-sm text-neutral-600 cursor-trigger"
              >Política de Privacidad</a
            >
          </li>
          <li>
            <a
              href={TerminosDeServicio}
              target="_blank"
              rel="noopener noreferrer"
              class="text-sm text-neutral-600 cursor-trigger"
              >Términos de Servicio</a
            >
          </li>
        </ul>
      </div>
      <p class="text-sm text-neutral-600 md:text-center">
        © {currentYear} JoiSolutions. <br class=" md:hidden"/> Todos los derechos reservados.
      </p>
    </div>
  </div>
</footer>
