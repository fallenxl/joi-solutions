---
import JoiPayIcon from "../icons/JoiPayIcon.astro";

const benefits = [
  {
    title: "Usuarios",
    description:
      "Control total desde el celular sobre recargas y reportes de consumo. Una sola bandita para pagar todo dentro del entorno autorizado.",
    icon: "fa fa-users",
    },
  {
    title: "Sponsors",
    description:
      "Control de pagos,  posicionamiento como líderes de innovación, ingresos adicionales.",
    icon: "fa fa-handshake",
  },
  {
    title: "Comercio",
    description: "Cobros instantáneos y seguros, sin efectivo ni errores.",
    icon: "fa fa-store",
  },
];
---

<section>
  <div class="px-4 md:px-10 my-20">
    <div class=" mx-auto flex flex-col items-center">
      <div
        class="border px-6 py-1 rounded-full text-center text-neutral-500 text-lg mb-2 font-medium bg-neutral-50 border-neutral-200 shadow-2xl"
      >
        <span class="flex items-center gap-1"> Beneficios </span>
      </div>
        <h2 class="text-2xl md:text-4xl font-medium text-neutral-700 text-center leading-[1.3em] mb-2  md:max-w-[30ch]">
            Descubre una nueva forma de pagar y gestionar tus beneficios <span class="text-tertiary font-bold">.</span>
        </h2>
        <p class="text-neutral-600 text-center mb-5">
            Beneficios clave para usuarios, comercios y sponsors con  JoiPay
        </p>
      <div
        class="grid grid-cols-1 md:grid-cols-3 gap-10 max-w-screen-xl mx-auto mt-10"
      >
        {
          benefits.map((benefit) => (
            <div class="bg-neutral-50/40 rounded-2xl p-7 mb-5 border border-neutral-200 shadow-sm flex flex-col ">
              <div class="mb-4">
                <i class={benefit.icon + " text-tertiary text-3xl"} />
              </div>
              <h3 class="text-2xl font-semibold text-neutral-700 mb-2 ">
                {benefit.title}
              </h3>
              <p class="text-neutral-600 mt-2 ">
                {benefit.description}
                </p>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>
