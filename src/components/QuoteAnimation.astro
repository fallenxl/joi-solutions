    type: "words",
    aria: "hidden",
  });

  const words = splitText.words;
  const tl = gsap.timeline({});
  gsap.from(words, {
    opacity: 0,
    stagger: 0.1,
    duration: 2,
    ease: "sine.out",
    scrollTrigger: {
      trigger: animateQuote,
      start: "top 80%",
      end: "top 20%",
      toggleActions: "play none none reverse",
    },
  });
</script>
