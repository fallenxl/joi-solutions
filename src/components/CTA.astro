---
import { Image } from "astro:assets";
import JoiYellow from "../assets/joi-yellow.png";
const {title = "¿Quieres saber más sobre nosotros?", description = "Descubre cómo nuestros productos pueden transformar tu forma de interactuar y crecer en el mundo digital."} = Astro.props;
---
<section class="px-6">
  <div
    class=" bg-neutral-50 shadow-xl border border-neutral-200 max-w-screen-xl mx-auto flex items-center justify-between md:px-2 py-20 md:p-8 md:py-8 rounded-2xl relative my-10 overflow-hidden mb-20"
  >
    <div class="flex items-center w-full gap-4">
        <div class="flex flex-col items-center justify-center  text-neutral-700 md:w-3/4 mx-auto  gap-2 z-10 ">
        
            <span class="text-2xl md:text-5xl font-bold leading-[1.4em] text-center  text-balance">  
                {title}
            </span>
            <small class="text-sm md:text-xl text-center  text-balance">
                {description}
            </small>
            <a
                href="/contacto"
                class="bg-tertiary px-8 mt-8  text-neutral-700 py-3 rounded-full shadow-lg cursor-trigger cursor-pointer  relative z-[40]"
            >
                <span class="relative z-[60] font-medium">Contáctanos</span>
            </a>
        </div>
        <div class="w-full absolute flex items-center justify-center h-full opacity-50 md:opacity-100">
            <!-- GRADIENT -->
             <!-- <div class="absolute inset-0 bg-gradient-to-r from-primary to-blue-200/10"></div> -->
            <Image
                src={JoiYellow}
                alt="Background"
                class="w-full h-full object-cover opacity-30"
                loading="lazy"
                width={1920}
                height={1080}
                priority
            />
        </div>
    </div>
  </div>
</section>
