---
import { Image } from "astro:assets";
import JoiYellow from "../assets/joi-yellow.png";
import deviceImage from "../assets/device.png"; // Puedes cambiar esta imagen por la que desees usar
const {
  showImage = false,
  title = "¿Quieres saber más sobre nosotros?",
  description = "Descubre cómo nuestros productos pueden transformar tu forma de interactuar y crecer en el mundo digital.",
} = Astro.props;
---

<section class="px-4 md:px-6">
  <div
    class="bg-neutral-50/80 px-2 shadow-xl border border-neutral-200 max-w-screen-xl mx-auto flex flex-col items-center justify-between md:px-2 rounded-2xl relative my-10 overflow-hidden mb-20"
  >
    <div class="flex items-center w-full gap-4 py-10">
      <div
        class="flex flex-col items-center justify-center text-neutral-700 md:w-3/4 mx-auto gap-2 z-10"
      >
        <span
          class="text-2xl md:text-5xl font-bold leading-[1.4em] text-center text-balance"
        >
          {title}
        </span>
        <small class="text-sm md:text-xl text-center text-balance">
          {description}
        </small>
        <a
          href="/contacto"
          class="bg-tertiary text-sm md:text-lg px-8 mt-8 text-white py-3 rounded-full shadow-lg cursor-trigger cursor-pointer relative z-[40]"
        >
          <span class="relative z-[60] font-medium">Contáctanos</span>
          <i class="fa-solid fa-arrow-right text-white ml-2"></i>
        </a>
      </div>
    </div>
    {
      showImage && (
        <div class="mt-10 w-full flex items-center justify-center relative ">
          <Image
            src={deviceImage}
            alt="Imagen de dispositivo"
            class={`relative opacity-100 z-10 rounded-t-xl block border border-neutral-200`}
            loading="lazy"
            width={800}
            height={800}
          />
        </div>
      )
    }
    <!-- BG Joi -->
    <div class="w-full absolute flex items-center justify-center h-full opacity-50 md:opacity-100">
      <Image
        src={JoiYellow}
        alt="Background"
        class="w-full h-full object-cover opacity-30"
        loading="lazy"
        width={1920}
        height={1080}
        priority
      />
    </div>
    
  </div>
</section>
