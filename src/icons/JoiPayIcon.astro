---
interface LogoIconProps {
  variants: "default" | "white";
  class?: string;
  showSlogan?: boolean;
}
const { variants = "default", class: className, showSlogan = false } = Astro.props as LogoIconProps;
---

<div class={`logo-container  ${className}`}>
  <div class="flex flex-col items-end justify-center">
    <h1 class="font-harabara flex items-center leading-none ">
      <span
        class={`logo-first-text relative flex items-center ${variants === "white" ? "text-white" : "text-primary"}`}
      >
        Jo
        <span class="relative inline-block align-top font-harabara-logo">
          <!-- dot -->
          <span
            class="absolute top-0 left-1/2 -translate-x-1/2 translate-y-[25%]
           h-[0.18em] aspect-square rounded-full bg-tertiary"
          ></span>
          i
        </span>
      </span>
      <span
        class="logo-separator w-[0px] h-[60px] bg-secondary/20 shadow-2xl rounded-2xl scale-y-0 hidden"
      ></span>
      <span
        class={`logo-second-text ${variants === "white" ? "text-white" : "text-tertiary"}`}
        >Pay</span
      >
    </h1>
    {showSlogan && <small
      class="text-[15%] slogan-text text-neutral-500 font-poppins font-light tracking-widest uppercase -my-1"
      >Simplifying tech, inspiring moments!</small>}
  </div>
</div>
